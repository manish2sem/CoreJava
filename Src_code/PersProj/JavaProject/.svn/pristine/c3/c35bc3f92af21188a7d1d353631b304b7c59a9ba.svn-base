package CoreJava.J_Advance.JUnitConcept.RunnerClasses.JunitClasses;

import org.junit.runner.JUnitCore;
import org.junit.runner.Result;
import org.junit.runner.notification.Failure;

import J_Advance.JUnitConcept.JunitTest.JunitClasses.TestResultCls;

public class TestRunnerTestResult {
	public static void main(String[] args) { 

		Result result = JUnitCore.runClasses(TestResultCls.class); 

		for (Failure failure : result.getFailures()) { 
			System.out.println(failure.toString()); 
		} 

		System.out.println(result.wasSuccessful()); 
	}

}
